# Identity Service Environment Variables

# Service Configuration
PORT=3006
HOST=127.0.0.1
NODE_ENV=development

# Asgardeo OIDC Configuration (Machine-to-Machine)
ASGARDEO_ORG=kubestock
ASGARDEO_BASE_URL=https://api.asgardeo.io/t/kubestock
ASGARDEO_CLIENT_ID=your_m2m_client_id
ASGARDEO_CLIENT_SECRET=your_m2m_client_secret
ASGARDEO_TOKEN_URL=https://api.asgardeo.io/t/kubestock/oauth2/token

# SCIM2 API Configuration
ASGARDEO_SCIM2_URL=https://api.asgardeo.io/t/kubestock/scim2

# Asgardeo Group IDs (get these from Asgardeo console)
# These are the UUIDs of the groups in Asgardeo
ASGARDEO_GROUP_ID_ADMIN=
ASGARDEO_GROUP_ID_SUPPLIER=
ASGARDEO_GROUP_ID_WAREHOUSE_STAFF=

# JWT Validation (for incoming requests)
ASGARDEO_JWKS_URL=https://api.asgardeo.io/t/kubestock/oauth2/jwks
ASGARDEO_ISSUER=https://api.asgardeo.io/t/kubestock/oauth2/token
